<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/TakePhotoButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:text="Take a Photo!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/SaveLogButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Save all Logs"
        app:layout_constraintEnd_toEndOf="@+id/TakePhotoButton"
        app:layout_constraintStart_toStartOf="@+id/TakePhotoButton"
        app:layout_constraintTop_toBottomOf="@+id/TakePhotoButton" />


    <TextView
        android:id="@+id/PhotoCountedTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:inputType="none"
        android:text="Photo counted:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/TakePhotoButton"
        app:layout_constraintTop_toBottomOf="@+id/SaveLogButton" />

    <TextView
        android:id="@+id/PhotoCountedNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:ems="10"
        android:inputType="none"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/PhotoCountedTitle"
        app:layout_constraintEnd_toEndOf="@+id/TakePhotoButton"
        app:layout_constraintStart_toEndOf="@+id/PhotoCountedTitle"
        app:layout_constraintTop_toTopOf="@+id/PhotoCountedTitle" />

    <TextView
        android:id="@+id/NetworkLogTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="none"
        android:text="Network Log:"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/TakePhotoButton"
        app:layout_constraintStart_toStartOf="@+id/TakePhotoButton"
        app:layout_constraintTop_toBottomOf="@+id/PhotoCountedNumber" />

    <ScrollView
        android:id="@+id/NetworkLogView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:background="#000000"
        android:padding="10dp"
        android:scrollbars="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/AuthorName"
        app:layout_constraintEnd_toEndOf="@+id/TakePhotoButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/TakePhotoButton"
        app:layout_constraintTop_toBottomOf="@+id/NetworkLogTitle"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/NetworkLogText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="8sp" />
    </ScrollView>

    <TextView
        android:id="@+id/AuthorName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:inputType="none"
        android:text="Tommaso Bocchietti"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>